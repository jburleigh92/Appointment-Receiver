{
“$schema”: “http://json-schema.org/draft-07/schema#”,
“title”: “Healthcare Appointment Event”,
“description”: “Schema for validating healthcare appointment webhook events”,
“version”: “1.0.0”,

“required_fields”: {
“event_type”: “string”,
“appointment_id”: “string”,
“patient_id”: “string”,
“timestamp”: “string”
},

“optional_fields”: {
“notes”: “string”
},

“valid_event_types”: [
“appointment.scheduled”,
“appointment.cancelled”,
“appointment.updated”
],

“field_descriptions”: {
“event_type”: “Type of appointment event (scheduled, cancelled, or updated)”,
“appointment_id”: “Unique identifier for the appointment (non-empty string)”,
“patient_id”: “Unique identifier for the patient (non-empty string)”,
“timestamp”: “ISO 8601 formatted timestamp (e.g., 2025-01-10T12:30:00Z)”,
“notes”: “Optional additional notes about the appointment”
},

“validation_rules”: {
“event_type”: “Must be one of the valid_event_types”,
“appointment_id”: “Cannot be empty or whitespace only”,
“patient_id”: “Cannot be empty or whitespace only”,
“timestamp”: “Must be valid ISO 8601 format with timezone”,
“notes”: “If provided, must be a string”
},

“examples”: {
“valid”: {
“event_type”: “appointment.scheduled”,
“appointment_id”: “A12345”,
“patient_id”: “P8765”,
“timestamp”: “2025-01-10T12:30:00Z”,
“notes”: “Annual physical examination”
},
“minimal”: {
“event_type”: “appointment.cancelled”,
“appointment_id”: “A12346”,
“patient_id”: “P8766”,
“timestamp”: “2025-01-11T14:00:00Z”
}
}
}
