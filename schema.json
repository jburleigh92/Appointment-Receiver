{
“$schema”: “http://json-schema.org/draft-07/schema#”,
“title”: “Appointment Event”,
“description”: “Schema for appointment webhook events”,
“type”: “object”,
“required”: [
“event_type”,
“appointment_id”,
“patient_id”,
“timestamp”
],
“properties”: {
“event_type”: {
“type”: “string”,
“description”: “Type of appointment event”,
“enum”: [
“appointment.scheduled”,
“appointment.cancelled”,
“appointment.rescheduled”,
“appointment.completed”,
“appointment.no_show”
],
“examples”: [
“appointment.scheduled”,
“appointment.cancelled”
]
},
“appointment_id”: {
“type”: “string”,
“description”: “Unique identifier for the appointment”,
“minLength”: 1,
“maxLength”: 50,
“pattern”: “^[A-Za-z0-9_-]+$”,
“examples”: [
“A12345”,
“APT-2025-001”
]
},
“patient_id”: {
“type”: “string”,
“description”: “Unique identifier for the patient”,
“minLength”: 1,
“maxLength”: 50,
“pattern”: “^[A-Za-z0-9_-]+$”,
“examples”: [
“P8765”,
“PAT-2025-001”
]
},
“timestamp”: {
“type”: “string”,
“description”: “ISO 8601 formatted timestamp indicating when the event occurred”,
“format”: “date-time”,
“examples”: [
“2025-01-10T12:30:00Z”,
“2025-01-10T12:30:00+00:00”,
“2025-01-10T08:30:00-04:00”
]
},
“notes”: {
“type”: “string”,
“description”: “Optional notes or additional information about the appointment”,
“maxLength”: 1000,
“examples”: [
“Annual physical examination”,
“Patient requested morning appointment”,
“Follow-up from previous visit”
]
}
},
“additionalProperties”: false,
“examples”: [
{
“event_type”: “appointment.scheduled”,
“appointment_id”: “A12345”,
“patient_id”: “P8765”,
“timestamp”: “2025-01-10T12:30:00Z”,
“notes”: “Annual physical”
},
{
“event_type”: “appointment.cancelled”,
“appointment_id”: “A12346”,
“patient_id”: “P8766”,
“timestamp”: “2025-01-11T09:00:00Z”,
“notes”: “Patient called to cancel”
},
{
“event_type”: “appointment.completed”,
“appointment_id”: “A12347”,
“patient_id”: “P8767”,
“timestamp”: “2025-01-09T14:30:00Z”
}
]
}
